<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Please submit your query here, and we shall get back to you...!</h4>
      </div>
      <div class="panel-body">
      <%= form_for @message, url: create_message_url do |f| %>
        <%= notice %>
        <%= @message.errors.full_messages.join(', ') %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Please enter your name' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Please enter your email id' %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: 'Briefly describe your query here' %>
        </div>
        <%= f.submit 'Send', class: 'btn btn-primary' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
