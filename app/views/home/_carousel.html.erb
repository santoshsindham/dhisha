<!-- Carousel
================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img class="first-slide" src="/images/hands.png" alt="First slide">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="font-color-black"><b>Dhisha aims at eradicating poverty by providing skill development training.</b></h1>
          <%= link_to "Sign up today", "#sign_up", "data-toggle" => "modal", :class => 'btn btn-lg btn-primary', "data-target" => "#sign_up" %>
          <%= link_to "Already a member? Sign in.", "#login", "data-toggle" => "modal", :class => 'btn btn-lg btn-danger', "data-target" => "#login" %>
        </div>
      </div>
    </div>
    <div class="item">
      <img class="second-slide" src="/images/children.png" alt="Second slide">
      <div class="container">
        <div class="carousel-caption">
          <h3 class="font-color-blue"><b>Dhisha initiates efforts in various interconnected socio-economic fields such as health, women empowerment, and social justice.</b></h3>
          <%= link_to "Sign up today", "#sign_up", "data-toggle" => "modal", :class => 'btn btn-lg btn-primary', "data-target" => "#sign_up" %>
          <%= link_to "Already a member? Sign in.", "#login", "data-toggle" => "modal", :class => 'btn btn-lg btn-danger', "data-target" => "#login" %>
        </div>
      </div>
    </div>
    <div class="item">
      <img class="third-slide" src="/images/quotes.png" alt="Third slide">
      <div class="container">
        <div class="carousel-caption">
          <%= link_to "Sign up today", "#sign_up", "data-toggle" => "modal", :class => 'btn btn-lg btn-primary', "data-target" => "#sign_up" %>
          <%= link_to "Already a member? Sign in.", "#login", "data-toggle" => "modal", :class => 'btn btn-lg btn-danger', "data-target" => "#login" %>
        </div>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div><!-- /.carousel -->
