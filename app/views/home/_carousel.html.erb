<!-- Carousel
================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag "hands_carousel.png", alt: "First slide", class: "first-slide" %>
      <div class="container">
        <div class="carousel-caption">
          <h1 class="font-color-black"><b>Dhisha aims at eradicating poverty by providing skill development training.</b></h1>
          <%= render 'sign_up_btn_page' %>
        </div>
      </div>
    </div>
    <div class="item">
      <%= image_tag "children_carousel.png", alt: "Second slide", class: "second-slide" %>
      <div class="container">
        <div class="carousel-caption">
          <h1 class="font-color-black"><b>Dhisha human development trust is a humanitarian non-profit organization.</b></h1>
          <%= render 'sign_up_btn_page' %>
        </div>
      </div>
    </div>
    <div class="item">
      <%= image_tag "quotes_carousel.png", alt: "Third slide", class: "third-slide" %>
      <div class="container">
        <div class="carousel-caption">
          <h1 class="font-color-white"><b>Dhisha promotes education and health.</b></h1>
          <%= render 'sign_up_btn_page' %>
        </div>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div><!-- /.carousel -->
